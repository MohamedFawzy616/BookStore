@using System.Globalization
@model List<RateViewModel>


<partial name="_SchemaMarkupBank" model="Model">

	<div class="container widget my-5 py-5 z-depth-1">
		<h1 class="font-weight-bold" itemprop="name">
			@Html.Raw(ViewBag.Title)
		</h1>
		@{
			CultureInfo culture = new CultureInfo("ar-EG");
			string formattedDate = Model.FirstOrDefault().Date.ToString("dd MMMM yyyy", culture);
			<strong>@Html.Raw(Analytics.Day()) @formattedDate</strong>
		}
		<section class="text-center px-md-5 mx-md-5 dark-grey-text">
			<div class="row d-flex justify-content-center">
				<div class="col-lg-7">
					<p>
						<h2>@Html.Raw(ViewBag.h2)</h2>
					</p>
				</div>
			</div>
		</section>
	</div>
	<div itemprop="mainEntity" itemscope itemtype="https://schema.org/ItemList">
		<table class="table table-striped CurrencyRates">
			<caption itemprop="name">@Html.Raw(Analytics.Day()) @formattedDate</caption>
			<thead class="aqua-gradient white-text">
				<tr>
					<th scope="col">العملة</th>
					<th scope="col">شراء</th>
					<th scope="col">بيع</th>
					<th scope="col">وقت</th>
				</tr>
			</thead>
			<tbody>
				@{
					foreach (var Rate in Model)
					{
						<tr itemprop="itemListElement" itemscope itemtype="https://schema.org/ExchangeRateSpecification">

							<td itemprop="currency" content="@Rate.Currency">
								<img itemprop="image" alt="@Rate.Currency" title="@Rate.Currency" style="width:35px" src="/Images/Currencies/@Rate.CurrencyLogo">
								<a hreflang="EG-ar" href="@string.Format("/Currency/"+Rate.Currency.Replace(" ","-"))">@Rate.Currency</a>
							</td>

							<td itemprop="currentExchangeRate" itemscope itemtype="https://schema.org/UnitPriceSpecification">
								<a itemprop="price" hreflang="EG-ar" href="Bank/@Rate.Bank.Replace(" ","-")/@Rate.Currency.Replace(" ","-")">@Rate.Buy_Price</a>
								<meta itemprop="priceCurrency" content="PLN" />
							</td>
							<td itemprop="currentExchangeRate" itemscope itemtype="https://schema.org/UnitPriceSpecification">
								<a itemprop="price" hreflang="EG-ar" href="Bank/@Rate.Bank.Replace(" ","-")/@Rate.Currency.Replace(" ","-")">@Rate.Sale_Price</a>
								<meta itemprop="priceCurrency" content="PLN" />
							</td>
							<td itemprop="startTime" width="15%">@string.Format("{0:t}", Rate.Date).Replace("PM", "م").Replace("AM", "ص")</td>
						</tr>
					}
				}
			</tbody>
		</table>

		<div class="text-right mb-4 p-3 bg-light">
			<div mb-3>
				<span class="mb-2">
					<span class="ml-3">
						<a hreflang="EG-ar" href="https://chat.whatsapp.com/KqsJcDmywvxA0ZmaZnGeIe">انضم الى واتس اب</a>
					</span>
					<span>
						<a hreflang="EG-ar" href="https://t.me/+CLreE-oOIlAxOWU8">انضم الى تلجرام</a>
					</span>
				</span>
			</div>
			<span class="fs-5">
				"نقدم لك في موقع EgyptCurrencyRates.com أسعار العملات في مصر محدثة فوريًا، إلى جانب نصائح مالية تساعدك في اتخاذ القرارات.
				نوفر لك تحديثات فورية لأسعار صرف العملات الأجنبية في مختلف البنوك المصرية، مما يسهل عليك متابعة أسعار العملات بسهولة. سواء كنت رجل أعمال أو مستثمر أو مسافر، يمكنك تصفح الموقع والانتقال بين البنوك المختلفة أو العملات المتعددة."
			</span>
		</div>

		<div class="text-right mb-4  bg-light">

			<div class="card p-3 shadow-sm">
				<strong class="mb-3">نصائح مهمة للحفاظ على أموالك:</strong>
				<ol class="list-group list-group-numbered">
					<li class="list-group-item">
						احرص على التعامل مع البنوك عند بيع أو شراء العملات، حيث انها المصدرالوحيد  الموثوق، وتجنب التعامل في السوق السوداء.
					</li>
					<li class="list-group-item">
						تابع موقعنا يوميا، <a hreflang="EG-ar" href="https://t.me/+CLreE-oOIlAxOWU8">انضم الى تلجرام</a> و
						<a hreflang="EG-ar" href="https://chat.whatsapp.com/KqsJcDmywvxA0ZmaZnGeIe">انضم الى واتس اب</a> للحصول على تحديثات فورية لأسعار العملات.

					</li>
					<li class="list-group-item">
						اهتم بمتابعة الأخبار الاقتصادية والسياسية يوميا، لأنها أكثر ما يؤثر على الأسعار.
					</li>
					<li class="list-group-item">
						استخدم الرسوم البيانية لفهم اتجاه الأسعار.
					</li>
					<li class="list-group-item">
						تصفح صفحات البنوك والعملات المختلفة على الموقع لمقارنة الأسعار.
					</li>
				</ol>
			</div>
		</div>
	</div>

	@if (ViewBag.Summary != null)
	{
		<div class="col-md-12 summary">
			<p>
				@Html.Raw(ViewBag.Summary)
			</p>
		</div>
	}

